# ============================================
# Whalez Trading Agent V2 - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============ Database ============
DATABASE_URL="postgresql://whalez:whalez_dev_password@localhost:5432/whalez"

# ============ API Server ============
API_PORT=3001
API_HOST=0.0.0.0
JWT_SECRET=your-super-secret-jwt-key-change-in-production
CORS_ORIGIN=http://localhost:3000

# ============ Adapters ============
# Options: paper, hyperliquid, megaeth (future)
EXECUTION_ADAPTER=paper
MARKETDATA_ADAPTER=hyperliquid

# ============ Paper Trading (Default) ============
PAPER_TRADING=true
PAPER_INITIAL_EQUITY=10000

# ============ Hyperliquid PERPS ============
# Network: mainnet or testnet
HL_NETWORK=mainnet
HL_HTTP_URL=https://api.hyperliquid.xyz
HL_WS_URL=wss://api.hyperliquid.xyz/ws
HL_ACCOUNT_ADDRESS=
HL_PRIVATE_KEY=

# ============ Live Trading Safety ============
# CRITICAL: Must be explicitly enabled
LIVE_TRADING_ENABLED=false
MAX_LEVERAGE=5
MAX_DRAWDOWN_PCT=10
POSITION_SIZE_PCT=2
MIN_CONFIRMATIONS=3

# ============ Market Data ============
DATA_REFRESH_MS=1000
CANDLE_LIMIT=500

# ============ Grok AI (xAI) ============
# Get your API key from https://x.ai
GROK_API_KEY=
GROK_BASE_URL=https://api.x.ai/v1
GROK_MODEL=grok-3-latest
GROK_TIMEOUT_MS=30000
GROK_MAX_TOKENS=1200
GROK_TEMPERATURE=0
GROK_RATE_LIMIT_PER_MIN=20

# ============ X API (Evidence Retrieval) ============
# Get your bearer token from https://developer.twitter.com
# REQUIRED for grounded mode - without this, Grok shows "insufficient sources"
X_BEARER_TOKEN=
X_SEARCH_MAX_RESULTS=30
X_EVIDENCE_WINDOW_HOURS=24

# ============ MegaETH (Synced with Watchtower) ============
# Uses same RPC as Watchtower for consistency
MEGAETH_CHAIN_ID=6343
MEGAETH_RPC_URL=https://timothy.megaeth.com/rpc
MEGAETH_RPC_HTTP_BACKUP=
MEGAETH_WS_URL=
MEGAETH_PRIVATE_KEY=
MEGAETH_BLOCKSCOUT_URL=https://megaeth-testnet-v2.blockscout.com

# ============ Worker ============
LOG_LEVEL=info

# ============ Web App ============
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001/ws
